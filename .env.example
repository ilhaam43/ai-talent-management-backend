# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3001

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ai_talent_db?schema=public"
SHADOW_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ai_talent_db_shadow?schema=public"

# Authentication
JWT_SECRET=your-super-secret-jwt-key

# LLM Configuration (NVIDIA API)
LLM_ENABLED=true
LLM_API_KEY=your-nvidia-api-key
LLM_BASE_URL=https://integrate.api.nvidia.com/v1
LLM_MODEL=meta/llama-3.1-8b-instruct

# n8n Webhook URLs
N8N_WEBHOOK_URL=http://localhost:5678/webhook/read_data
N8N_TALENT_POOL_WEBHOOK_URL=http://localhost:5678/webhook/talent-pool

# Gmail Configuration (for email notifications)
# Option 1: OAuth2 (recommended for production)
GMAIL_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-google-client-secret
GMAIL_REFRESH_TOKEN=your-gmail-refresh-token

# Option 2: App Password (simpler, good for development)
# Generate at: https://myaccount.google.com/apppasswords
GMAIL_APP_PASSWORD=your-16-char-app-password

# Gmail sender info
GMAIL_FROM_EMAIL=your-email@gmail.com
GMAIL_FROM_NAME=AI Talent Management